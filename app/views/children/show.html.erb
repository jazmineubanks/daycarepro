<div>
  <div>
    <h1>
      Child #<%= @the_child.id %> details
    </h1>

    <div>
      <div>
        <a href="/children">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_child/<%= @the_child.id %>">
          Delete child
        </a>
      </div>
    </div>

    <dl>
      <dt>
        First name
      </dt>
      <dd>
        <%= @the_child.first_name %>
      </dd>

      <dt>
        Last name
      </dt>
      <dd>
        <%= @the_child.last_name %>
      </dd>

      <dt>
        Date of birth
      </dt>
      <dd>
        <%= @the_child.date_of_birth %>
      </dd>

      <dt>
        Parent
      </dt>
      <dd>
        <%= @the_child.parent_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_child.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_child.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit child
    </h2>

    <form action="/modify_child/<%= @the_child.id %>"  method="post" >
      <div>
        <label for="first_name_box">
          First name
        </label>

        <input type="text" id="first_name_box" name="query_first_name" value="<%= @the_child.first_name %>">
      </div>

      <div>
        <label for="last_name_box">
          Last name
        </label>

        <input type="text" id="last_name_box" name="query_last_name" value="<%= @the_child.last_name %>">
      </div>

      <div>
        <label for="date_of_birth_box">
          Date of birth
        </label>

        <input type="text" id="date_of_birth_box" name="query_date_of_birth" value="<%= @the_child.date_of_birth %>">
      </div>

      <div>
        <label for="parent_id_box">
          Parent
        </label>

        <input type="text" id="parent_id_box" name="query_parent_id" value="<%= @the_child.parent_id %>">
      </div>

      <button>
        Update child
      </button>
    </form>
  </div>
</div>

<hr>
