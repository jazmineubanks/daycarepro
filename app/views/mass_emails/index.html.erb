<div>
  <div>
    <h1>
      List of all mass emails
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new mass email
    </h2>

    <form action="/insert_mass_email" method="post">
      <div>
        <label for="admin_id_box">
          Admin
        </label>

        <input type="text" id="admin_id_box" name="query_admin_id">
      </div>

      <div>
        <label for="subject_box">
          Subject
        </label>

        <input type="text" id="subject_box" name="query_subject">
      </div>

      <div>
        <label for="context_box">
          Context
        </label>

        <textarea id="context_box" name="query_context" rows="3"></textarea>
      </div>

      <div>
        <label for="sent_at_box">
          Sent at
        </label>

        <input type="datetime-local" id="sent_at_box" name="query_sent_at">
      </div>

      <button>
        Create mass email
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Admin
        </th>

        <th>
          Subject
        </th>

        <th>
          Context
        </th>

        <th>
          Sent at
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_mass_emails.each do |a_mass_email| %>
      <tr>
        <td>
          <%= a_mass_email.id %>
        </td>

        <td>
          <%= a_mass_email.admin_id %>
        </td>

        <td>
          <%= a_mass_email.subject %>
        </td>

        <td>
          <%= a_mass_email.context %>
        </td>

        <td>
          <%= a_mass_email.sent_at %>
        </td>

        <td>
          <%= time_ago_in_words(a_mass_email.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_mass_email.updated_at) %> ago
        </td>

        <td>
          <a href="/mass_emails/<%= a_mass_email.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
